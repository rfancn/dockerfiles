##############################################
# Dockerfile to build wxgigo container image
# Based on Oracle Linux 7
##############################################
FROM library/oraclelinux:7-slim
MAINTAINER "Ryan Fan"
# install python3.5
RUN yum install -y https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm && \
     yum install -y https://rhel7.iuscommunity.org/ius-release.rpm && \
     rm -fr /var/tmp/yum* && \
     yum install -y gcc openssl-devel python35u python35u-devel python35u-pip && \
     yum clean all && \
     rm -rf /var/cache/yum
RUN pip3.5 --no-cache-dir install -i https://pypi.douban.com/simple ansible && \
     pip3.5 --no-cache-dir install -i https://pypi.douban.com/simple sanic
RUN mkdir -p /wxgigo
